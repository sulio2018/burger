<div id="logo">
    <img src="/assets/img/burgerimg.png" alt="burger logo">
</div>

<div id="title">Eat Da Burger!</div>

<div class="row">
    <div class="col-md-6">
        {{#each burgers}}
    </div>

    <div class="col-md-6">
        {{#unless this.devoured}}
    </div>
</div>

<div class="row">
    <div class="col-md-6">

        <form id="devour" action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="1">&nbsp;{{this.id}}. {{this.burger_name}}&nbsp;&nbsp;
            <button type="submit" class="btn-xs">Devour it!</button>
        </form>

    </div>

    <div class="col-md-6">
        {{/unless}}
        {{/each}}
    </div>
</div>

<div class="col-md-12">

    <h3>Add a Burger</h3>

    <form class="form-inline" action="burgers/insertOne" method="POST">
        <div class="form-group">
            <label for="email">Burger Name:</label>
            <input type="text" class="form-control" name="burger_name" id="ca">
            <input type="hidden" name="devoured" value="1">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

</div>

<div class="col-md-4">
    <h3>Devoured Burgers</h3>
    {{#each burgers}}
    {{#if this.devoured}}
    <div class="row">
        <div class="col-md-12">
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="0">&nbsp;{{this.id}}. {{this.burger_name}}&nbsp;&nbsp;
                <button type="submit" class="btn-xs">Reset</button>
            </form>
        </div>
    </div>
    {{/if}}

    {{/each}}
</div>

