<div class="main-container">

    <div id="logo">
        <img src="/assets/img/burgerimg.png" alt="burger logo">
    </div>

    <div id="title">Eat Da Burger!</div>

    <br>

    <div class="container">
		<div class="centered" class="list">
		  <h2>Burgers waiting to be devoured:</h2>
		  <ul class="list-group" style="align-content: center;
	        align-content: center; ">
		    {{#each burgers}}
		      {{#unless this.devoured}}
		        <li class="list-group-item list-group-item-primary">
		          {{this.burger_name}}

		          <form action="/{{this.id}}?_method=POST" method="POST">
		            <input type="hidden" name="devoured" value="true">
		            <button type="submit" class="btn btn-warning">Devour it!</button>
		          </form>
		        </li>
		      {{/unless}}
		    {{/each}}
		  </ul>
		</div>
	</div>

	<div class="container">
		<div class="centered" class="list">
		  <h2>Devoured Burgers:</h2>
		  <ul class="list-group">
		    {{#each burgers}}
		      {{#if this.devoured}}
		        <li class="list-group-item list-group-item-success">
		          {{this.burger_name}}
		          <form action="/{{this.id}}?_method=PUT" method="POST">
		            <input type="hidden" name="devoured" value="false">
		          </form>
		        </li>
		      {{/if}}
		    {{/each}}
		  </ul>
		</div>
	</div>

	<div class="container">
		<div class="centered" class="list">
			<h2>Build your Burger</h2>
			<form class="create-update-form" action="/" method="POST">
			  <div class="form-group">
			    <label for="burger">Burger Name:</label>
			    <br>
			    <input type="text" id="burger" class="user-burgername" name="name" aria-label="Username" aria-describedby="basic-addon1">
			  </div>
			  <button type="submit" class="btn btn-warning">Add Burger</button>
			</form>
		</div>
	</div>
</div>